<Page x:Class="myproject.pages.Page3"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Exam Details">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Exam Details" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>
            <TextBlock Text="Exam Name:" FontWeight="Bold"/>
            <TextBlock x:Name="ExamNameTextBlock" Margin="0,0,0,20"/>
            <TextBlock Text="Exam ID:" FontWeight="Bold"/>
            <TextBlock x:Name="ExamIdTextBlock" Margin="0,0,0,20"/>

            <TextBlock Text="time needed:" FontWeight="Bold"/>
            <TextBlock x:Name="ExamtimeTextBlock" Margin="0,0,0,20"/>
            <TextBlock Text="Exam questions:" FontWeight="Bold"/>
            <TextBlock x:Name="ExamquestionsTextBlock" Margin="0,0,0,20"/>
            <StackPanel Orientation="Horizontal" Margin="20">
                <Button Content="start" Height="35" Width="200" Margin="0,20,0,0" 
     Background="#007ACC" Foreground="White" FontWeight="Bold" Click="Button_Click" />

            <Button Content="Back" Height="35" Width="200" Margin="10,20,0,0" 
Background="#007ACC" Foreground="White" FontWeight="Bold" Click="Button_Click_1"  />

            </StackPanel>


        </StackPanel>
    </Grid>
</Page>
